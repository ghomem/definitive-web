<!DOCTYPE html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="google-site-verification" content="{{google_verification_tag}}" />
    <title>{{ title }}</title>
    <meta
      name="description"
      content="{{ subtitle }}"
    />
    <link rel="shortcut icon" href="https://picocss.com/favicon.ico" />
    <link rel="canonical" href="https://picocss.com/examples/basic-template/" />

    <!-- Pico.css -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@1/css/pico.min.css" />

    <!-- Custom template-->
    <link rel="stylesheet" href="static/css/custom.css" />
  </head>

  <body>

    <!-- HTMX -->
    <script src="https://unpkg.com/htmx.org@1.9.6"></script>

    <!-- Header -->
    <header class="container" style="padding-bottom: 10px;padding-top: 10px;">
      <hgroup>
        <h1>{{ title }}</h1>
        <h2>{{ subtitle }}</h2>
      </hgroup>
      <!-- Plausible -->
      <script defer data-domain="definitive.li" src="https://plausible.io/js/script.js"></script>
   </header>
    <!-- ./ Header -->

    <!-- Main -->
    <main class="container" style="padding-bottom: 10px;padding-top: 10px;">

      <div class="grid">

        <div>
          <!-- Form elements-->
          <section id="form">
            <!-- this form includes the HTMX hx-post and hx-target elements -->
            <form hx-post="/render" hx-target="#the-image" autocomplete="off">

              <!-- this div includes all the input fields -->
              {% include 'input-fields-div.html.j2' with context %}
              <!-- end of the input fields div -->

              <!-- Buttons -->
              <div class="grid">
                <input type="submit" value="Generate" />
                <input type="submit" value="Autodefine" hx-post="/define" hx-target="#the-definition" />
                <input type="button" value="Reset"      hx-post="/reset" hx-target="#the-input-fields" class="secondary"/>
              </div>
            </form>
          </section>
          <!-- ./ Form elements -->
        </div>

        <div id="the-image" hx-swap-oob="true">
          <figure>
          <img src="/static/img/initial-image.jpg" alt="Default image" style="border:1px solid {{img_border_color}}; margin-top: {{img_top_margin}}px"/>
          </figure>
        </div>

      </div>
      <!-- ./ Main -->

    <!-- Footer -->
    <footer class="container">
      <small
        >Built in a hurry with <a href="https://htmx.org">htmx</a> and <a href="https://picocss.com">Pico</a> â€¢
      </small
      >
    </footer>
    <!-- ./ Footer -->

  </body>
</html>

